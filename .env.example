# TradingView Strategy Research Lab - Configuration
# Copy this file to .env and fill in your values

# ================================================
# API Keys
# ================================================

# OpenAI API Key (required for LLM analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Custom LLM endpoint (leave empty for OpenAI)
# LLM_BASE_URL=

# ================================================
# Database
# ================================================

# SQLite database path
DB_PATH=data/strategies.db

# ================================================
# Scraping Settings
# ================================================

# Maximum number of strategies to collect
MAX_STRATEGIES=100

# Minimum likes threshold (filter low-quality strategies)
MIN_LIKES=500

# Run browser in headless mode (true for production)
HEADLESS=true

# Request timeout in milliseconds
TIMEOUT=30000

# ================================================
# Analysis Settings
# ================================================

# LLM model to use for analysis
LLM_MODEL=gpt-4o

# Skip LLM analysis (use only rule-based analysis)
SKIP_LLM=false

# Maximum retry attempts for API calls
MAX_RETRIES=3

# ================================================
# Output Paths
# ================================================

# Directory for converted strategy files
OUTPUT_DIR=data/converted

# Platform integration path (optional)
# PLATFORM_PATH=/path/to/your/trading/platform

# Logs directory
LOGS_DIR=logs

# ================================================
# Rate Limiting
# ================================================

# Delay between requests in seconds
RATE_LIMIT_DELAY=1.0
